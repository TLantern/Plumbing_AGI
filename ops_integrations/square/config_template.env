# Square API Configuration Template
# Copy these variables to your environment or .env file

# Required: Your Square access token
# Get this from Square Developer Console: https://developer.squareup.com/apps
SQUARE_ACCESS_TOKEN=your_access_token_here

# Environment: 'sandbox' for testing, 'production' for live
SQUARE_ENVIRONMENT=sandbox

# Optional: Your Square Application ID
SQUARE_APPLICATION_ID=your_application_id_here

# Optional: Webhook signature key for webhook verification
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key_here

# Optional: Default location ID to use
SQUARE_LOCATION_ID=your_location_id_here

# Logging level for Square API operations
SQUARE_LOG_LEVEL=INFO
