# Plumbing AGI Environment Configuration Template
# Copy this to .env and fill in your actual values

# Twilio Configuration for Phone/Voice Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=your_twilio_phone_number_here
# External URL for webhooks (use ngrok URL for local development)
EXTERNAL_WEBHOOK_URL=https://your-ngrok-url.ngrok.io

# OpenAI Configuration (for speech-to-text)
OPENAI_API_KEY=your_openai_api_key_here

# Google Calendar Configuration
GOOGLE_CALENDAR_ID=primary
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_TOKEN_PATH=token.json

# Akaunting Accounting Configuration
# For local development:
AKAUNTING_BASE_URL=http://localhost:8000
AKAUNTING_API_TOKEN=f00ce44c-ab7d-4170-bd99-1840f342a9d6
AKAUNTING_COMPANY_ID=safeharbour

# For production/cloud:
# AKAUNTING_BASE_URL=https://your-akaunting-instance.com
# AKAUNTING_API_TOKEN=your_akaunting_api_token_here
# AKAUNTING_COMPANY_ID=your_company_id_here

# Baserow CRM Configuration
# Get these from your Baserow workspace settings and table URLs

# Email-to-SMS via Gmail
# Enable 2FA on the Gmail account and create an App Password
GMAIL_USER=safeharbouragent@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here
FROM_NAME=SafeHarbour Booking Agent

# Optional: Carrier lookup and SMS fallback via Twilio
# If carrier is unknown, we will attempt Twilio Lookup and/or fallback to Twilio SMS
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM_NUMBER=

# Test harness
# TEST_SMS_NUMBER=+15555550123
# TEST_SMS_CARRIER=verizon
# TEST_SMS_MESSAGE=Hello from Email-to-SMS
BASEROW_API_URL=https://api.baserow.io
BASEROW_API_TOKEN=your_baserow_api_token_here
BASEROW_DATABASE_ID=your_baserow_database_id_here
BASEROW_CUSTOMERS_TABLE_ID=your_customers_table_id_here
BASEROW_INQUIRIES_TABLE_ID=your_inquiries_table_id_here

# Legacy CRM Configuration (if not using Baserow)
# CRM_API_URL=https://api.crm.com/v1
# CRM_API_KEY=your_crm_api_key_here

# Inventory/Supplier Configuration
SUPPLIER_API_URL=https://api.supplier.com/v1
SUPPLIER_API_KEY=your_supplier_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/plumbing_AGI

# Logging Configuration
LOG_LEVEL=INFO

